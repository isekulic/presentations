\mode<presentation>

% \definecolor{ntnublue}{RGB}{14,44,142}
\definecolor{ntnublue}{RGB}{176,204,229}
\definecolor{ntnusand}{RGB}{244,215,103}

\definecolor{emlblueOLD}{RGB}{176,204,229}
\definecolor{hitsblue}{RGB}{1,70,153}
\definecolor{emlgrayOLD}{RGB}{153,153,153}
\definecolor{hitsgray}{RGB}{198,199,201}




\setbeamercolor{normal text}{fg=black,bg=white}
\setbeamercolor{alerted text}{fg=red}

\setbeamercolor{background canvas}{parent=normal text}
\setbeamercolor{background}{parent=background canvas}

% color for table of content, enumerate and itemize icons
\setbeamercolor{structure}{fg=black,bg=white}

\setbeamercolor{palette primary}{fg=white,bg=hitsblue}
\setbeamercolor{palette secondary}{fg=white,bg=hitsblue!80}
\setbeamercolor{palette tertiary}{fg=white,bg=hitsblue!90}
\setbeamercolor{palette quaternary}{fg=white,bg=hitsblue}

%hits (colors for slide title)
\setbeamercolor{hits first headline}{fg=hitsblue,bg=white}  
\setbeamercolor{hits second headline}{fg=hitsblue,bg=white}
%\setbeamercolor{hits second headline}{fg=emlgrayOLD,bg=white!80}
%hits titlepage
\setbeamercolor{hits first title}{fg=white,bg=hitsblue}
\setbeamercolor{hits second title}{fg=hitsgray!50,bg=hitsblue}

\setbeamercolor{titlelike}{parent=palette primary}

\setbeamercolor{block title}{fg=white,bg=hitsblue}
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=alerted text.fg!75!black}
\setbeamercolor{block title example}{use=example text,fg=white,bg=example text.fg!75!black}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!15!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!15!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!15!bg}

\setbeamercolor{sidebar}{bg=hitsblue!80}

\setbeamercolor{palette sidebar primary}{fg=white}
\setbeamercolor{palette sidebar secondary}{fg=white!75}
\setbeamercolor{palette sidebar tertiary}{fg=white!75}
\setbeamercolor{palette sidebar quaternary}{fg=white}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\mode
<all>
