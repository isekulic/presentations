\ifx\beamer@version\beamertrondheim@version
\else
  \PackageWarningNoLine{beamerthemehits}{This version of beamerthemehits (\beamertrondheim@version ) might not work with detected beamer class }
\fi

\mode<presentation>

\newif\ifbeamer@minimal
\newif\ifbeamer@nonav
\newif\ifbeamer@blue
\newif\ifbeamer@sand
\newif\ifbeamer@numbers
\newif\ifbeamer@shadow
\newif\ifbeamer@nynorsk
\newif\ifbeamer@bokmaal
\newif\ifbeamer@innovation
\newif\ifbeamer@mylogo
\newif\ifbeamer@nologo
\newif\ifbeamer@hitsbg

\beamer@minimalfalse
\beamer@nonavfalse
\beamer@bluefalse
\beamer@sandfalse
\beamer@numbersfalse
\beamer@shadowtrue
\beamer@nynorskfalse
\beamer@bokmaalfalse
\beamer@innovationfalse
\beamer@mylogofalse
\beamer@nologotrue
\beamer@hitsbgfalse

\DeclareOptionBeamer{compress}{\beamer@compresstrue}
\DeclareOptionBeamer{minimal}{\beamer@minimaltrue}
\DeclareOptionBeamer{nonav}{\beamer@nonavtrue}
\DeclareOptionBeamer{blue}{\beamer@bluetrue}
\DeclareOptionBeamer{sand}{\beamer@sandtrue}
\DeclareOptionBeamer{numbers}{\beamer@numberstrue}
\DeclareOptionBeamer{noshadow}{\beamer@shadowfalse}
\DeclareOptionBeamer{nynorsk}{\beamer@nynorsktrue}
\DeclareOptionBeamer{bokmaal}{\beamer@bokmaaltrue}
\DeclareOptionBeamer{innovation}{\beamer@innovationtrue}
\DeclareOptionBeamer{mylogo}{\beamer@mylogotrue}
\DeclareOptionBeamer{nologo}{\beamer@nologofalse}
\DeclareOptionBeamer{hitsbg}{\beamer@hitsbgtrue}

\ProcessOptionsBeamer

\ifbeamer@shadow
  \useinnertheme[shadow=true]{rounded}
\else
  \useinnertheme{rounded}
\fi
\useoutertheme{hits}
\usecolortheme{hitsblue}

\ifbeamer@blue
  \setbeamercolor{normal text}{fg=black,bg=white!95!hitsblue}
\fi

\ifbeamer@sand
  \setbeamercolor{normal text}{fg=black,bg=white!80!ntnusand}
\fi

\ifbeamer@nonav
  \setbeamertemplate{navigation symbols}{}  % Removes navigation symbols.
\fi

\setbeamerfont{block title}{size={}}

\mode
<all>
